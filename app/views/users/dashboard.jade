#user(data-id=user._id.toString()) User: #{user.username}
#wood Wood: #{user.wood.toFixed(2)}
#cash Cash $#{user.cash.toFixed(2)}

button#plant.button.button-rounded.button-action Plant Seed
//button#getforest.button.button-rounded.button-action Get Forest
button#exchange.button.button-rounded.button-action Exchange Wood for $$$
input#wood-amt(type='text', placeholder= 'Wood Amount')

if(user.isAutoGrowAvailable)
    button#purchase-autogrow.button.button-rounded.button-action Purchase Auto Grow
if(user.isAutoSeedAvailable)
    button#purchase-autoseed.button.button-rounded.button-action Purchase Auto Seed
if(user.isAutoRootAvailable)
    button#purchase-autoroot.button.button-rounded.button-action Purchase Auto Root
